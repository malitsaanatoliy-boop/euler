#include <iostream>
using namespace std;

int main() {
    int Sum = 1;//сумма
    for (int n = 3; n <= 1001; n += 2) {
        /*считаем сумму углов для каждой длины стороны квадратов по спирали
       n*n — правый нижний угол 
       n*n-(n-1) — правый верхний угол 
       n*n-2*(n-1) — левый верхний угол
       n*n-3*(n-1) — левый нижний угол*/
        int sum = n*n + (n*n-(n-1)) + (n*n-2*(n-1)) + (n*n-3*(n-1));
        Sum += sum;
    }
    cout << Sum << endl;
    return 0;
}