#include <iostream>
using namespace std;
//подсчет факториала
int factorial(int n) {
    int f = 1;
    for (int i = 2; i <= n; ++i)
        f *= i;
    return f;
}

int main() {
    int fact[10];//заполняем массив факториалов
    for (int i = 0; i <= 9; ++i)
        fact[i] = factorial(i);

    int result = 0;
    for (int n = 10; n <= 7 * fact[9]; ++n) {
        int sum = 0, x = n;
        //проверяем является ли число суммой факториалов
        while (x > 0) {
            int d = x % 10;
            sum += fact[d];
            x /= 10;
        }
        if (sum == n)//если число равно сумме тогда добавляем к счетчику
            result += n;
    }

    cout << result << endl;
    return 0;
}