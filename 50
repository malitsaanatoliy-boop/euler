#include <iostream>
#include <cmath>
using namespace std;

bool prime(int n) {
    if (n < 2) return false;
    for (int i = 2; i*i <= n; ++i)
        if (n % i == 0) return false;
    return true;
}

int main() {
    int maxSum = 0;
    int maxCount = 0;

    for (int x = 2; x < 1000000; ++x) {
        if (prime(x)) {
            long long sum = 0;
            int count = 0;
            for (int n = x; n < 1000000; ++n) {
                if (prime(n)) {
                    sum += n;
                    count++;
                    if (sum > 1000000) break;
                    if (prime(sum) && count > maxCount) {
                        maxCount = count;
                        maxSum = sum;
                    }
                }
            }
        }
    }

    cout << maxSum << endl;
    return 0;
}