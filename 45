#include <iostream>
#include <cmath>
using namespace std;

int main() {
    long long x = 40756;

    while (true) {
        double t = (-1 + sqrt(1 + 8.0*x)) / 2;  
        double p = (1 + sqrt(1 + 24.0*x)) / 6;    
        double h = (1 + sqrt(1 + 8.0*x)) / 4;     
        if ((t == (long long)t) && (p == (long long)p) && (h == (long long)h)) {
            cout << x << endl;
            break;
        }
        x++;
    }

    return 0;
}