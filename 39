#include <iostream>
using namespace std;

int main() {
    int maxCount = 0;//число решений
    int P = 0;//периметр

    for (int p = 1; p <= 1000; p++) {
        int count = 0;//временный счетчик
        //находим эти стороны и для каждой тройки чисел +к числу решений
        for (int a = 1; a < p/3; a++) {
            for (int b = a; b < (p - a)/2; b++) {
                int c = p - a - b;
                if (a*a + b*b == c*c) count++;
            }
        }
        if (count > maxCount) {
            maxCount = count;
            P = p;
        }
    }

    cout << P << endl;
    return 0;
}
